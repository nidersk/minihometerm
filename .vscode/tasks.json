{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "pytest", "-q"],
      "group": "test",
      "problemMatcher": []
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "flake8", "src", "tests"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Package",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["-m", "build"],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Cleanup",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["tools/cleanup.py"],
      "group": "build",
      "problemMatcher": []
    }
  ],
  "compounds": [
    {
      "label": "Clean + Build",
      "dependsOn": [
        "Cleanup",
        "Build Package"
      ],
      "dependsOrder": "sequence"
    },
    {
      "label": "Lint + Test",
      "dependsOn": [
        "Lint",
        "Run Tests"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
